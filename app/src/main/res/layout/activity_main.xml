<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.video.videomaster.activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/thirdRow"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_below="@+id/secondRow"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/vuImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/vuclip" />

            <ImageView
                android:id="@+id/moreApps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/great_apps" />

            <ImageView
                android:id="@+id/spotifyImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/spotify" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/firstRow"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/vineImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/vines" />

            <ImageView
                android:id="@+id/facebookImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/fb" />

            <ImageView
                android:id="@+id/vimeoImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/vimeo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondRow"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/firstRow"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/instagramImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/instagram" />

            <ImageView
                android:id="@+id/dailyImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                app:srcCompat="@drawable/dailymotion" />

            <ImageView
                android:id="@+id/youTubeImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/youtube" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:id="@+id/forthRow"
            android:layout_below="@id/thirdRow"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rateImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/rate_icon" />

            <ImageView
                android:id="@+id/twitterImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/twitter" />

            <ImageView
                android:id="@+id/shareImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/share_icon" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/forthRow"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:id="@+id/banner_layout"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"/>
    </RelativeLayout>


</ScrollView>
